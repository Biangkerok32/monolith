<?xml version="1.0" encoding="GB2312"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
           
	<context:component-scan base-package="com.kongur.monolith.biz.service" />
	
	<bean id="attributesConfigManager" class="com.kongur.monolith.session.attibute.DefaultAttributesConfigManager" init-method="init">
	    <property name="attributeConfigs">
	        <map>
	            <entry key="userName">
	                <bean class="com.kongur.monolith.session.attibute.AttributeConfigDO">
	                    <property name="key" value="userName"></property>
	                    <property name="clientKey" value="_u_"></property>
	                </bean>
	            </entry>
	        </map>
	    </property>
	</bean>
</beans>